<Window x:Class="TogglTimeManager.Views.TimeOff.TimeOffManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TogglTimeManager.Views.TimeOff"
        xmlns:controls="clr-namespace:TogglTimeManager.Controls"
        xmlns:viewModels="clr-namespace:TogglTimeManager.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:TimeOffWindowViewModel}"
        Title="TimeOffManagement" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="How long did the time off last?" FontWeight="Bold"/>
            <controls:DateRangePicker DateRange="{Binding Range}"/>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="358,295,0,0" VerticalAlignment="Top" Width="75" Command="{Binding ChangeRangeCommand}"/>
    </Grid>
</Window>
