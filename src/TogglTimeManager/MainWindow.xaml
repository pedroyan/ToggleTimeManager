<Window x:Class="TogglTimeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TogglTimeManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:MainWindowViewModel x:Key="ViewModel" TextBox="Initial Text box content"/>
    </Window.Resources>
    <Window.Content>
        <Grid>
            <TextBox HorizontalAlignment="Center" Height="24" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="301" DataContext="{Binding TextBox, Mode=TwoWay, Source={StaticResource ViewModel}}"/>
            <Button Content="Button" HorizontalAlignment="Center" Height="34" VerticalAlignment="Bottom" Width="300" Margin="0,0,0,40" Command="{Binding ButtonCommand, Mode=OneWay, Source={StaticResource ViewModel}}" />
        </Grid>
    </Window.Content>
</Window>
